@page
@model MyApp.Namespace.RazorModel
@{
    ViewData["Title"] = "Razor";


    //hämtar in dagens datum och tid
    var datetime = DateTime.Now;

    //hämtar in dag
    var day = datetime.DayOfWeek;

    //deklarerar variabel för måndag
    var monday = "";

    //kontroll om det är måndag eller inte
    if (day != DayOfWeek.Monday)
    {
        monday = "inte måndag";
    }
    else
    {
        monday = "måndag";
    }

    //lista med kurser
    string[] courses =
    {
"DT057G, Webbutveckling I",
"DT093G, Webbutveckling II",
"DT173G, Webbutveckling III",
"DT084G, Introduktion till programmering i JavaScript",
"DT068G, Webbanvändbarhet",
"DT003G, Datateknik GR, Databaser",
"DT197G, Webbdesign för CMS",
"DT163G, Digital bildbehandling för webb",
"IK060G, Informatik GR, Projektledning",
"DT193G, Fullstack-utveckling med ramverk"
};

}

<h1>Razor</h1>

<h2>Information</h2>

<p><strong>Datum/klockslag:</strong> @datetime</p>

<p>Idag är det @monday!</p>

<p><strong>Kurser jag läst:</strong></p>

<ul>
    @foreach (string course in courses)
    {
        <li>@course</li>
    }
</ul>